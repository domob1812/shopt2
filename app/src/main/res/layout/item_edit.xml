<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivDragHandle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_drag_handle"
        android:contentDescription="Drag handle"
        app:tint="@color/gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="16sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tvOnShoppingList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/on_shopping_list"
            android:textSize="12sp"
            android:textColor="@color/green"
            android:visibility="gone" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnAddToShoppingList"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_add_shopping_cart"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/add_to_shopping_list"
        app:tint="@color/gray"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/btnEditItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_edit"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit item"
        app:tint="@color/gray" />

    <ImageButton
        android:id="@+id/btnDeleteItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_delete"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete item"
        app:tint="@color/gray" />

</LinearLayout>