<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Shop header -->
        <LinearLayout
            android:id="@+id/shopHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="4dp"
            android:paddingStart="10dp"
            android:paddingEnd="6dp"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivCollapseIndicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_expand_more"
                android:layout_marginEnd="4dp"
                android:tint="@color/gray"
                android:contentDescription="Collapse indicator" />

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shop Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <ImageButton
                android:id="@+id/btnUncheckShop"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_undo"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Uncheck all items in shop"
                android:layout_margin="2dp"
                android:tint="@color/gray" />

            <ImageButton
                android:id="@+id/btnEditItems"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit items"
                android:layout_margin="2dp"
                android:tint="@color/gray" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_light"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <!-- Shopping items -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewShoppingItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingTop="2dp"
            android:paddingBottom="2dp" />

        <!-- Empty state for shop -->
        <TextView
            android:id="@+id/tvEmptyShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_items_in_shop"
            android:gravity="center"
            android:padding="8dp"
            android:visibility="gone"
            android:textStyle="italic"
            android:textColor="@color/gray" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>